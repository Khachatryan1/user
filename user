#include <iostream>
#include <string>
using namespace std;
struct Animals{
    string name;
};
struct User{
    static const int len=5;
    string name;
    string surname;
    int age;
    Animals k[len];
};
void foo(User *data){
    cout<<data->name<<"\n"<<data->surname<<"\n"<<data->age<<"\n";
    for(int i=0;i<data->len;i++)
    {
        cout<<data->k[i].name<<' ';
    }
    cout<<endl;
}
int main(){
    User jhon;
    jhon.name="mike";
    jhon.surname="cloud";
    jhon.age=25;
    string names[]={"rex","tuzik","jeko","jerry","tom"};
    for(int i=0;i<jhon.len;i++)
        jhon.k[i].name=names[i];
 
    foo(&jhon);
    return 0;
}
